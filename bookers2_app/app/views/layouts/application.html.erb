<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>Bookers</h1>
      <ul>
        <% if user_signed_in? %>
        <li><%= link_to "Home", user_path(current_user.id) %></li>
        <li><%= link_to "Users", users_path %></li>
        <li><%= link_to "Books", books_path %></li>
        <li><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
        <% else %>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "About", home_about_path %></li>
        <li><%= link_to "singn up", new_user_registration_path %></li>
        <li><%= link_to "login", new_user_session_path %></li>
        <% end %>
      </ul>
    </header>
    <% flash.each do |message_type, message| %>
    <%= content_tag :div, message, class: message_type %>
    <% end %>
    <%= yield %>
    <footer>
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
