<h1>New book</h1>
<%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
<%= form_with model: @book, url: books_path, method: :create, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <%= f.submit %>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>userimage</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
     <tr>
       <td>
        <%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg" %>
       </td>
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.opinion %></td>
     </tr>
    <% end %>
  </tbody>
</table>