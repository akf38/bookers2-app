<% if @book.errors.any? %>
    <div class="alert">
      <h2><%= pluralize(@book.errors.count,"error") %> prohibited this obj from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<h1>User info</h1>
<%= attachment_image_tag current_user, :profile_image,fallback: "no_image.jpg", size: '100x100' %>
<table>
  <tr>
    <td>name</td>
    <td><%= current_user.name %></td>
  </tr>
  <tr>
    <td>introduction</td>
    <td><%= current_user.introduction %></td>
  </tr>
</table>
<%= link_to "btn(edit profile)", edit_user_path(current_user.id) %>

<h1>New book</h1>
<%= attachment_image_tag @user, :profile_image,fallback: "no_image.jpg", size: '100x100' %>
<%= form_with model: @book, url: books_path, method: :create, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <%= f.submit %>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>userimage</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
     <tr>
       <td>
        <%= attachment_image_tag book.user, :profile_image,fallback: "no_image.jpg", size: '100x100' %>
       </td>
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.opinion %></td>
     </tr>
    <% end %>
  </tbody>
</table>