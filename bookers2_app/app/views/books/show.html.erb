<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image,fallback: "no_image.jpg", size: '100x100' %>
<table>
  <tr>
    <td>name</td>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <td>introduction</td>
    <td><%= @user.introduction %></td>
  </tr>
</table>
<% if @user.id == current_user.id %>
  <%= link_to "btn(edit profile)", edit_user_path(@user.id) %>
<% end %>

<h1>New book</h1>
<%= form_with model: @book, url: books_path, method: :post, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <%= f.submit %>
<% end %>

<h1>Book detail</h1>
<table>
  <tbody>
    <tr>
      <td>
      <%= link_to user_path(@bookpost.user_id) do %>
       <%= attachment_image_tag @bookpost.user, :profile_image,fallback: "no_image.jpg", size: '100x100' %><br>
       <%= @bookpost.user.name %>
      <% end %>
      </td>
      <td><%= link_to @bookpost.title, book_path(@bookpost.id) %></td>
      <td><%= @bookpost.opinion %></td>
      <% if @user.id == current_user.id %>
      <td><%= link_to "Edit", edit_book_path(@bookpost.id) %></td>
      <td><%= link_to "Destroy", book_path(@bookpost.id), method: :delete %></td>
      <% end %>
    </tr>
  </tbody>
</table>