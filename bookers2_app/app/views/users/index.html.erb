<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image,fallback: "no_image.jpg", size: '100x100' %>
<table>
  <tr>
    <td>name</td>
    <td><%= current_user.name %></td>
  </tr>
  <tr>
    <td>introduction</td>
    <td><%= current_user.introduction %></td>
  </tr>
</table>
<%= link_to "btn(edit profile)", edit_user_path(@user.id) %>

<h1>New book</h1>
<%= form_with model: @book, url: books_path, method: :post, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <%= f.submit %>
<% end %>

<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: '100x100' %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
