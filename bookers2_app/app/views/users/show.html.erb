<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image,fallback: "no_image.jpg", size: '100x100' %>
<table>
  <tr>
    <td>name</td>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <td>introduction</td>
    <td><%= @user.introduction %></td>
  </tr>
</table>
<% if @user.id == current_user.id %>
  <%= link_to "btn_edituser", edit_user_path(@user.id) %>
<% end %>

<h1>New book</h1>
<%= form_with model: @book, url: books_path, method: :post, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <%= f.submit %>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>userimage</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <% @books.each do |book| %>
   <tr>
     <td><%= link_to user_path(book.user_id) do %>
       <%= attachment_image_tag book.user, :profile_image,fallback: "no_image.jpg", size: '100x100' %>
      <% end %> </td>
     <td><%= link_to book.title, book_path(book.id) %></td>
     <td><%= book.opinion %></td>
   </tr>
  <% end %>
</table>
